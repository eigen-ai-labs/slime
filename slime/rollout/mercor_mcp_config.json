{
  "mcpServers": {
    "calendar_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/calendar/mcp_servers/calendar_server",
      "env": {
        "APP_CALENDAR_DATA_ROOT": "/.apps_data/calendar",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "chat_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/chat/mcp_servers/chat_server",
      "env": {
        "HAS_STATE": "true",
        "STATE_LOCATION": "/.apps_data/chat",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "code_execution_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/code/mcp_servers/code_execution_server",
      "env": {
        "SANDBOX_ROOT": "/filesystem",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "sheets_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/spreadsheets/mcp_servers/sheets_server",
      "env": {
        "APP_SHEETS_ROOT": "/filesystem",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "filesystem_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/filesystem/mcp_servers/filesystem_server",
      "env": {
        "APP_FS_ROOT": "/filesystem",
        "SERVER_NAME": "filesystem_server",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "mail_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/mail/mcp_servers/mail_server",
      "env": {
        "APP_MAIL_DATA_ROOT": "/.apps_data/mail",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "pdf_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/pdfs/mcp_servers/pdf_server",
      "env": {
        "APP_PDF_ROOT": "/filesystem",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "slides_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/presentations/mcp_servers/slides_server",
      "env": {
        "APP_SLIDES_ROOT": "/filesystem",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "docs_server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["run", "python", "main.py"],
      "cwd": "/app/mcp_servers/documents/mcp_servers/docs_server",
      "env": {
        "APP_DOCS_ROOT": "/filesystem",
        "MCP_TRANSPORT": "stdio"
      }
    }
  }
}
